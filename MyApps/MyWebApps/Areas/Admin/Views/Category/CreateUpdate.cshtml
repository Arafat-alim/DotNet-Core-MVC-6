@using MyWeb.Models
@model MyWeb.Models.ViewModels.CategoryVM

<form method="POST">
    @*sending id to the CreateUpdate method*@
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row-3 pb-3">
            <h2 class="text-primary">@((Model.Category == null || Model.Category.Id == 0) ? "Create" : "Update" ) Category</h2>
             <hr />
        </div>
       <div class="row pb-3">
            <Label asp-for="Category.Name">Order Name</Label>
            <input asp-for="Category.Name" class="form-control">
            <span asp-validation-for="Category.Name" class="text-danger"></span>
       </div>

         <div class="row pb-3">
            <Label asp-for="Category.DisplayOrder">Display Order</Label>
            <input type="text" asp-for="Category.DisplayOrder" class="form-control">
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
       </div>
     
           @if((Model.Category == null || Model.Category.Id == 0))
               { 
                     <button class="btn btn-warning" type="submit">Create</button>
            }
            else
            {
                <button class="btn btn-warning" type="submit">Update</button>
            }
    
        <div asp-validation-summary="All"></div>
    </div>
</form>
<a asp-controller="Category" asp-action="Index">Back To List</a>

@*client side validation using script _ValidationScriptsPartial*@
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
