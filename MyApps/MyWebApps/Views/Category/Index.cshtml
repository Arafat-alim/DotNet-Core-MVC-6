@using MyWebApps.Models
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

@*<h1>List of Categories</h1>*@
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
           <h3 class="text-primary">Category</h3> 
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle-dotted m-2"></i>Create New Order</a>
        </div>
    </div>

</di>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th scope="col">Order Name</th>
      <th scope="col">Display Order</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-hover">
      @foreach(var item in Model)
        {
        <tr>
            <td scope="row">@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td role="group">
                <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Category" type="button"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Category" type="button"><i class="bi bi-trash"></i></a>
            </td>
        </tr>            
        }
  </tbody>
</table>