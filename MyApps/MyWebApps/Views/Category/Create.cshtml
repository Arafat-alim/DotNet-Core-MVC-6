@model Category

<form method="POST" >
    <div class="border p-3 mt-4">
        <div class="row-3 pb-3">
            <h2 class="text-primary">Category</h2>
             <hr />
        </div>
       
       <div class="row pb-3">
            <Label asp-for="Name">Order Name</Label>
            <input asp-for="Name" class="form-control">
       </div>

         <div class="row pb-3">
            <Label asp-for="DisplayOrder">Display Order</Label>
            <input type="text" asp-for="DisplayOrder" class="form-control">
       </div>
       <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>
<a class="btn btn-primary" type="button" asp-controller="Category" asp-action="Index">Back To List</a>