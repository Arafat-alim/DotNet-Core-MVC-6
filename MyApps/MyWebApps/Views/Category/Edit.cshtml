@model Category

<form method="POST" >
    <div class="border p-3 mt-4">
        <div class="row-3 pb-3">
            <h2 class="text-primary">Edit Category</h2>
             <hr />
        </div>
       <div class="row pb-3">
            <Label asp-for="Name">Order Name</Label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
       </div>

         <div class="row pb-3">
            <Label asp-for="DisplayOrder">Display Order</Label>
            <input type="text" asp-for="DisplayOrder" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
       </div>
       <button class="btn btn-warning" type="submit">Update</button>
        <div asp-validation-summary="All"></div>
    </div>
</form>
<a class="btn btn-primary" type="button" asp-controller="Category" asp-action="Index">Back To List</a>

@*client side validation using script _ValidationScriptsPartial*@
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
